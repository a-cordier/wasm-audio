{
  "compilerOptions": {
    "target": "es2017",
    "module": "node",
    "isolatedModules": false,
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "dom"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist/js/"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}